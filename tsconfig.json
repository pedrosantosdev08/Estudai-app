{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "noEmit": true,
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src",
    "App.tsx",
    "app.config.ts",
    "index.ts",
    "src/modules/screens/HomeScreen/components",
    "components/DisciplinyCard",
    "Screens/TelaPrincipal/Services/TelaPrincipalLogic.ts",
    "Screens/TelaPrincipal",
    "Screens/StatsScreens",
    "Screens/PomodoroScreen",
    "Screens/HomeScreen/Layout.tsx"
  ],
  "exclude": ["node_modules"]
}
